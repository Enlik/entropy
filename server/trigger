		'versiontag': u'',
		'provide': set([]),
		'conflicts': set([]),
		'content': {'/path/to/file': "filetype (can be sym,obj,dir)"},
		'needed': set([u'libc.so.6']),
		'version': u'1.2.3-r1',
		'cflags': u'-Os -march=x86-64 -pipe',
