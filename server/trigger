		'datecreation': u'1194274924.0',
		'branch': u'3.5',
		'useflags': set([]),
		'eclasses': set([u'toolchain-funcs', u'multilib', u'portability', u'eutils', u'flag-o-matic']),
		'binkeywords': set([u'x86', u'amd64']),
