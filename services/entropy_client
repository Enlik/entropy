CLIENT_LOCK="/var/lib/entropy/entropy.lock"

depend() {
    need localmount
    # not yet
    # use net
}

start() {

    ebegin "Cleaning Entropy lock files"
    # remove client lock
    rm -f ${CLIENT_LOCK}
    eend 0

}
